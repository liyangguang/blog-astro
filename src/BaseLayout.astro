---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from './consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <slot name="style"/>
		<style>
			body {
				min-height: 100dvh;
				display: flex;
				flex-direction: column;
				margin: auto;
				padding: 20px;
				max-width: 110ch;
			}
			
			body > main {
				flex: 1;
				width: 100%;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
      <slot />
		</main>
		<Footer />
		<!-- Google tag (gtag.js) https://analytics.google.com/analytics/web/#/p395677361/reports/intelligenthome -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-FB9DL0DKLS"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-FB9DL0DKLS');
		</script>
	</body>
</html>
