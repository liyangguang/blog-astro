---

<BaseLayout>
	<style slot="style">
		main {
			display: grid;
			grid-template-columns: 200px 1fr;
			gap: 3em;
			align-items: start;
			max-width: 80ch;
			margin: 0 auto;
		}

		.section-title,
		.position,
		.metadata {
			margin: 0.3em 0;
		}

		.section-title {
			text-transform: uppercase;
			font-weight: bold;
		}

		.position {
			font-weight: bold;
		}

		.metadata {
			opacity: 0.7;
			font-size: .9em;
		}

		ul {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		.exp-details {
			list-style: disc;
			padding-left: 1em;
		}

		p {
			margin: .3em 0;
		}

		.first-name {
			font-weight: bold;
		}

		.first-name,
		.last-name {
			display: block;
			font-size: 2em;
			line-height: 1;
			margin-bottom: .1em;
		}

		.contacts li {
			margin: .5em 0;
		}
		.contacts li a {
			color: inherit;
			text-decoration: none;
			font-weight: normal;
			transition: color var(--transition);
		}

		.contacts li a:hover {
			color: var(--accent);
		}

		.text-content > li {
			margin-bottom: 1.4em;
		}

		@media print {
			:global(header, footer) {
				display: none !important;
			}
		}
	</style>

	<main>
		<p>
			<span class="first-name">Yangguang</span>
			<br>
			<span class="last-name">Li</span>
		</p>
		<ul class="contacts">
			{CONTACT.map((item) => <li><a href={item.url} target="_blank" rel="noreferrer noopener">{item.label}</a></li>)}
		</ul>
		{EXPERIENCES.map((exp) => 
			<div>
				<p class="section-title">{exp.company}</p>
				<p class="position">{exp.position}</p>
				<p class="metadata">{exp.time}</p>
				<p class="metadata">{exp.location}</p>
			</div>
			<ul class="text-content">
				{exp.content.map((exp) => <li>
					<span>{exp.item}</span>
					<ul class="exp-details">
						{exp.details.map((detail) => <li>{detail}</li>)}
						{exp.tech ? <li><b>Tech</b>: {exp.tech.join(', ')}.</li> : ''}
					</ul>
				</li>)}
			</ul>
		)}
		<span class="section-title">education</span>
		<ul class="text-content">
			{EDUCATION.map((item) => 
				<li>
					<p>{item.program} | {item.university}</p>
					<p class="metadata">{item.time} | {item.location}</p>
				</li>
			)}
		</ul>
	</main>
</BaseLayout>
