---

<BaseLayout>
	<style slot="style">
		main {
			display: grid;
			grid-template-columns: 200px 1fr;
			gap: 3em;
			align-items: start;
			max-width: 80ch;
			margin: 0 auto;
		}

		.section-title,
		.position,
		.metadata {
			margin: 0.3em 0;
		}

		.section-title {
			text-transform: uppercase;
			font-weight: bold;
		}

		.position {
			font-weight: bold;
		}

		.metadata {
			opacity: 0.7;
			font-size: .9em;
		}

		ul {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		p {
			margin: .3em 0;
		}

		.first-name {
			font-weight: bold;
		}

		.first-name,
		.last-name {
			display: block;
			font-size: 2em;
			line-height: 1;
			margin-bottom: .1em;
		}

		.contacts li {
			margin: .5em 0;
		}
		.contacts li a {
			color: inherit;
			text-decoration: none;
			font-weight: normal;
			transition: color var(--transition);
		}

		.contacts li a:hover {
			color: var(--accent);
		}

		.text-content li {
			margin-bottom: 1.4em;
		}

		@media print {
			:global(header, footer) {
				display: none !important;
			}
		}
	</style>

	<main>
		<p>
			<span class="first-name">Yangguang</span>
			<br>
			<span class="last-name">Li</span>
		</p>
		<ul class="contacts">
			{CONTACT.map((item) => <li><a href={item.url} target="_blank" rel="noreferrer noopener">{item.label}</a></li>)}
		</ul>
		{EXPERIENCES.map((item) => 
			<div>
				<p class="section-title">{item.company}</p>
				<p class="position">{item.position}</p>
				<p class="metadata">{item.time}</p>
				<p class="metadata">{item.location}</p>
			</div>
			<ul class="text-content">
				{item.content.map((item) => <li>{item}</li>)}
			</ul>
		)}
		<span class="section-title">education</span>
		<ul class="text-content">
			{EDUCATION.map((item) => 
				<li>
					<p>{item.program} | {item.university}</p>
					<p class="metadata">{item.time} | {item.location}</p>
				</li>
			)}
		</ul>
	</main>
</BaseLayout>
